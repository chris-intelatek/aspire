<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-gray">
	  <div class="panel-heading">
			<h4>Register as New User</h4>
	  </div>
	  <div class="prospect-show">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :advisor_first_name, required: true, autofocus: true, label: 'First Name' %>
            <%= f.input :advisor_last_name, required: true, label: 'Last Name'  %>
            <%= f.input :advisor_phone, label: 'Phone'  %>
            <%= f.input :advisor_mobile, label: 'Mobile'  %>
            <%= f.input :email, required: true  %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
            <%= f.input :password_confirmation, required: true %>
            <%= f.input :group, as: :hidden, input_html: {value: @group_id} %>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class:"btn btn-slate btn-block" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>