

<div class="col-md-12">
	<div class="panel panel-gray">
	  <div class="panel-heading">

	  	<div class="row">
	  		<div class="col-md-6">
	  			<h4>Listing
						<% if current_user.manager %>
			 				<%= @prospects.count %>
						<% else %>
							All
						<% end %>
					Prospects</h4>
	  		</div>
	  		<div class="col-md-4">
		  		<%= form_tag(prospects_path, :method => "get", id: "search-form") do %>
						<%= text_field_tag :search, params[:search], placeholder: "Search Prospects" %>
						<%= submit_tag "Search", class:"btn btn-slate btn-sm" %>
					<% end %>
				</div>
				<% if current_user.manager %>
		  		<div class="col-md-2 pull-right">
						<%= link_to "Download CSV", prospects_path(format: "csv"), class: "btn btn-beige btn-sm" %>
		  		</div>
		  	<% end %>
	  	</div>
	  </div>
	
		<div class="prospect-show table-responsive">
			
			<table class="table index-table table-condensed">
		  	<tr class="bordered">
		  		<td colspan="3"></td>
		  		<td>&nbsp;</td>		  		
		  		<td colspan="3">Commercial Payments</td>
		  		<td>&nbsp;</td>
		  		<td colspan="3">HealthCare Savings</td>
		  		<td>&nbsp;</td>
		  		<td colspan="3">Instant Pay</td>
		  	</tr>

		    <tr class="bordered">
		      <td>Consultant</td>
		      <td>Prospect</td>
			    <td>Employees</td>

			    <td>&nbsp;</td>
			    
		      <td>Next Action<br>
		      Date</td>			      
		      <td>Next Action</td>
		      <td>
		      	<div class="status">
			      	<li class="dropdown">
							  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Status <span class="caret"></span></a>
							  <ul class="dropdown-menu dropdown-menu-right status-menu" style="list-style: none;">
							    <li><%= link_to "All", prospects_path %></li>
							    <% @pay_status.each do |h| %>
							      <li class="black"><%= link_to "#{h.pay_status}", prospects_path(pay_status: h.pay_status) %></li>
							    <% end %>
							  </ul>
							</li>
						</div>
					</td>

			    <td>&nbsp;</td>
			    
		      <td>Next Action<br>
		      Date</td>			      
		      <td>Next Action</td>
		      <td>
		      	<div class="status">
			      	<li class="dropdown">
							  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Status <span class="caret"></span></a>
							  <ul class="dropdown-menu dropdown-menu-right status-menu" style="list-style: none;">
							    <li><%= link_to "All", prospects_path %></li>
							    <% @hcs_status.each do |h| %>
							      <li class="black"><%= link_to "#{h.hcs_status}", prospects_path(hcs_status: h.hcs_status) %></li>
							    <% end %>
							  </ul>
							</li>
						</div>
					</td>

			    <td>&nbsp;</td>

		      <td>Next Action<br>
		      Date</td>
		      <td>Next Action</td>
		      <td>
		      	<div class="status">
			      	<li class="dropdown">
							  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Status <span class="caret"></span></a>
							  <ul class="dropdown-menu dropdown-menu-right status-menu" style="list-style: none;">
							    <li><%= link_to "All", prospects_path %></li>
							    <% @pay_status.each do |b| %>
							      <li class="black"><%= link_to "#{b.pay_status}", prospects_path(pay_status: b.pay_status) %></li>
							    <% end %>
							  </ul>
							</li>
						</div>
					</td>
				</tr>
			  
			  <tbody class="bordered">
					<% @prospects.each do |prospect| %>
						<% if (prospect.user_id == current_user.id) || current_user.manager %>
					    <tr>
	
					      <td class="td-left">
					      	<%= prospect.user.advisor_first_name + ' ' + prospect.user.advisor_last_name %>
					      </td>
					      
					      <td class="td-left">
					     		<em><%= link_to prospect.organization, prospect %></em>
					      </td>
								
					      <td><%= prospect.employees %></td>

								<td>&nbsp;</td>
								
					      <td><% if !prospect.cps_next_action_date.nil? %>
					      			<%= prospect.cps_next_action_date.strftime("%m/%d/%Y") %>
					      		<% end %>
					      </td>
					      
					      <td><%= prospect.cps_next_action %></td>

					      <td><%= prospect.cps_status %></td>

								<td>&nbsp;</td>
								
					      <td><% if !prospect.hcs_next_action_date.nil? %>
					      			<%= prospect.hcs_next_action_date.strftime("%m/%d/%Y") %>
					      		<% end %>
					      </td>
					      
					      <td><%= prospect.hcs_next_action %></td>

					      <td><%= prospect.hcs_status %></td>
					      
								<td>&nbsp;</td>

					      <td><% if !prospect.pay_next_action_date.nil? %><%= prospect.pay_next_action_date.strftime("%m/%d/%Y") %><% end %></td>
					      
					      <td><%= prospect.pay_next_action %></td>

					      <td><%= prospect.pay_status %></td>
					      
					    </tr>
						<% end %>

					<% end %>
			  </tbody>

			</table>
			
		</div>

		<div class="panel-footer">
	 	</div>

	</div>
</div>