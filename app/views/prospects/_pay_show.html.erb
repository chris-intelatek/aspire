    <% if @prospect.pay_prospect == false %>
      <%= link_to "Add Instant Payments Service", pay_path(@prospect), class: "btn btn-slate" %>
    <% else %>
      <p>&nbsp;</p>
      <hr>
      <p>&nbsp;</p>
      <div class="row">
        <div class="col-md-4">
          <h4><strong>Instant Pay for Hourly Workers</strong></h4>
        </div>
        <div class="col-md-6">
          <br>
          Status: <em><%= @prospect.pay_status %></em>
        </div>
        <div class="col-md-2">
          <%= link_to "Edit CPS Service", pay_path(@prospect), class: "btn btn-warning" %>      
        </div>        
      </div>
      <div class="row">
        <div class="col-md-12">
          Next Action: 
    		  <% if !@prospect.pay_next_action_date.nil? %>
      		  <em><%= @prospect.pay_next_action_date.strftime("%m/%d/%y") %> - </em>
      		<% end %>
      		<em><%= @prospect.pay_next_action %></em>
        </div>
      </div>

      <br>
      
      <div class="row">
        <div class="col-md-4">
          Intro Pres Date: <% if !@prospect.pay_intro_presentation_date.nil? %>
    		  <em><%= @prospect.pay_intro_presentation_date.strftime("%m/%d/%y") %></em><% end %>
    		  <br>
    		  Intro Presented by: <em><%= @prospect.pay_intro_presenter %></em>  
        </div>
        <div class="col-md-4">
          SME Presentation Date: <% if !@prospect.pay_sme_presentation_date.nil? %>
    		  <em><%= @prospect.pay_sme_presentation_date.strftime("%m/%d/%y") %></em><% end %><br>
    		  Subject Matter Expert: <em><%= @prospect.pay_sme %></em>
        </div>
        <div class="col-md-4">
          Agreement Date: <% if !@prospect.pay_agreement_date.nil? %>
    		  <em><%= @prospect.pay_agreement_date.strftime("%m/%d/%y") %></em><% end %><br>
      		Total Hourly Employees: <em><%= @prospect.pay_hourly_employees %></em>
      	</div>
      </div>

      <br>
      
      <div class="row">
        <div class="col-md-12">
          Comments:
          <%= render @prospect.comments.where.not(pay_content: nil) %>
          <br>
          <%= render 'comments/pay_form' %>
        </div>
      </div>
      
    <% end %>