
<div class="col-md-12">
	<div class="panel panel-gray">
	  <!--<div class="panel-heading">-->

		<div class="prospect-show table-responsive">
			<table class="table index-table table-condensed">
			  <thead>
			    <tr>
			    	<th>Created</th>
			    	<th>BDA</th>
			      <th>Consultant</th>
			      <th>Prospect</th>
			      <th>Employees</th>
			      <th>Meeting Date</th>
			    </tr>
			  </thead>
				
			  <tbody class="bordered">
					<% @prospects.each do |prospect| %>
						<% unless prospect.intelatek_bda.blank? %>
					    <tr>
					      <td class="td-left">
					      	<%= prospect.created_at.strftime("%m/%d/%Y") %>
					      </td>
						      <td class="td-left">
					      	<%= prospect.intelatek_bda %>
					      </td>
					      <td class="td-left">
					      	<%= prospect.user.advisor_first_name + ' ' + prospect.user.advisor_last_name %>
					      </td>
					      
					      <td class="td-left">
					     		<em><%= link_to prospect.organization, prospect %></em>
					      </td>
	
					      <td>
					      	<%= prospect.employees %>
					      </td>
					      
					      <td>
					      	<% if !prospect.intro_presentation_date.nil? %>
					      		<%= prospect.intro_presentation_date.strftime("%m/%d/%Y") %>
					      	<% end %>
					      	<br>
					      	<% if !prospect.intro_presentation_date.nil? && (prospect.intro_presentation_date < Date.today) %>
	              		<%= (prospect.intro_presentation_date - Date.today).to_i %> days
					      	<% end %>
					      </td>
					    </tr>
					   <% end %>
					<% end %>

			  </tbody>
			</table>
			
		</div>

	</div>
</div>