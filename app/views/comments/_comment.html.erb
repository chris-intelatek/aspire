<div class="comment">
  <div class="row">
    <div class="col-md-9">
    	<em><%= comment.cps_content %><%= comment.pay_content %><%= comment.hcs_content %></em>
    	<p class="comment-posted-by">Posted by <%= comment.user.advisor_first_name + ' ' + comment.user.advisor_last_name %> on
    	<%= comment.created_at.strftime("%m/%d/%y") %></p>
		</div>

    <div class="col-md-3">
			<% if comment.user_id == current_user.id %>
				<%= link_to "Edit", edit_prospect_comment_path(comment.prospect, comment), class: "btn btn-warning btn-sm" %> &nbsp; 
				<%= link_to "Delete", prospect_comment_path(comment.prospect, comment), method: :delete,
						data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
			<% end %>
		</div>
	</div>
</div>
