<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-gray">
	  <div class="panel-heading">
			<h4>Edit/Update User</h4>
	  </div>
	  <div class="prospect-show">
      <%= simple_form_for @user do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :advisor_first_name, required: true, autofocus: true, label: 'First Name' %>
        <%= f.input :advisor_last_name, required: true, label: 'Last Name'  %>
        <%= f.input :advisor_phone, label: 'Phone'  %>
        <%= f.input :advisor_mobile, label: 'Mobile'  %>
        <%= f.input :email, required: true, autofocus: true %>

        <%= f.input :mailing_address, label: 'Mailing Address' %>
        <%= f.input :apt_suite, label: 'Apt/Suite #' %>
        
        <%= f.input :city, label: 'City' %>
        <%= f.input :state, collection: STATES %>
        <%= f.input :zip, label: 'ZipCode' %>

        <%= f.input :password, autocomplete: "off", required: false %>
        <%= f.input :password_confirmation %>
        <em>Notes entered below are not visible to users.</em>
        <%= f.input :notes %>
        <%= f.input :user_next_action_date %>
        <%= f.input :user_next_action %>
        <%= f.input :list_companies %>

        <% if current_user.admin %>        
          <%= f.input :group, required: true %>
      
          <%= f.input :user_code, required: true %>

          Admin&#63; <%= f.check_box :admin? %> &nbsp; | &nbsp; Manager&#63; <%= f.check_box :manager? %> &nbsp; | &nbsp; Support&#63; <%= f.check_box :support? %> | &nbsp;  Agree&#63; <%= f.check_box :agree? %>
        <% end %>
        
      </div>
    </div>
    <div class="panel-footer">
      <div class="form-actions">
        <%= f.button :submit, "Update", class:"btn btn-slate btn-block" %>
      </div>
      <% end %>
      <p>&nbsp;</p>
      <em>Caution: Deleting a user will delete all of their prospects and associated comments.</em>
  		<div class="links">
    		<%= link_to "Back", :back, class: "btn btn-beige" %> &nbsp;&nbsp;
        <%= link_to "Delete User", user_path(@user), data: { confirm: "Caution: Deleting a user will delete all of their prospects and associated comments." }, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>