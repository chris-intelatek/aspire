<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-gray">
	  <div class="panel-heading">
			<h4>Edit/Update User</h4>
	  </div>
	  <div class="prospect-show">
      <%= simple_form_for @user do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :advisor_first_name, required: true, autofocus: true, label: 'First Name' %>
        <%= f.input :advisor_last_name, required: true, label: 'Last Name'  %>
        <%= f.input :advisor_phone, label: 'Phone'  %>
        <%= f.input :advisor_mobile, label: 'Mobile'  %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, autocomplete: "off", required: false %>
        <%= f.input :password_confirmation %>

        <% if current_user.admin || current_user.manager %>        
          <%= f.input :group, required: true %>
        <% end %>

        <% if current_user.admin || [current_user.manager && current_user.support] %>        
          SWAT&#63; <%= f.check_box :bc_swat? %> &nbsp; | &nbsp; 
        <% end %>

        <% if current_user.admin %>
          Admin&#63; <%= f.check_box :admin? %> &nbsp; | &nbsp; Manager&#63; <%= f.check_box :manager? %> &nbsp; | &nbsp; Support&#63; <%= f.check_box :support? %>
        <% end %>
        
      </div>
    </div>
    <div class="panel-footer">
      <div class="form-actions">
        <%= f.button :submit, "Update", class:"btn btn-slate btn-block" %>
      </div>
      <% end %>
      <p>&nbsp;</p>
      <em>Caution: Deleteing a user will delete all of their prospects and associated comments.</em>
  		<div class="links">
    		<%= link_to "Back", :back, class: "btn btn-beige" %> &nbsp;&nbsp;
        <%= link_to "Delete User", user_path(@user), data: { confirm: "Caution: Deleteing a user will delete all of their prospects and associated comments." }, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>