<% if current_user.manager || current_user.support %>
  <div class="col-md-8 col-md-offset-2">



	<div class="panel panel-gray">
	  <div class="panel-heading">
	  	
	  	<div class="row">
	  		<div class="col-md-6">
          <h4>Listing <%= User.count %> Users</h4>
	  		</div>
	  		<div class="col-md-4">
      		<%= form_tag(users_path, :method => "get", id: "search-form") do %>
      			<%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
      			<%= submit_tag "Search", class:"btn btn-slate btn-sm" %>
      		<% end %>
	  		</div>
	  		<div class="col-md-2 pull-right">
					<%= link_to "Download CSV", users_path(format: "csv"), class: "btn btn-beige btn-sm" %>
	  		</div>
	  	</div>
	  	
	  </div>


  	<div class="prospect-show">
  
    	<div class="prospect-show table-responsive">
        <table class="table table-sm index-table table-condensed">
          <thead>
            <tr>
              <th class="th-left">Name</th>
              <th>Last Logged In</th>
              <th>Prospects</th>
              <th>Group</th>
              <th>Swat</th>
              <th>Admin</th>
              <th>Manager</th>
              <th>Support</th> 
            </tr>
          </thead>
                  
          <tbody>
            <% @users.order(:advisor_first_name).each do |user| %>
              <tr>
              	<td class="td-left"><%= link_to user.advisor_name, user %></td>
              	<td style="vertical-align:middle"><%= time_ago_in_words(user.current_sign_in_at) if user.current_sign_in_at %> ago</td>
              	<td style="vertical-align:middle"><%= user.prospects.size %></td>              	
              	<td style="vertical-align:middle"><%= user.group %></td>
              	<td style="vertical-align:middle"><% if user.bc_swat == true %><span class="glyphicon glyphicon-ok"></span><% end %></td>
              	<td style="vertical-align:middle"><% if user.admin == true %><span class="glyphicon glyphicon-ok"></span><% end %></td>
              	<td style="vertical-align:middle"><% if user.manager == true %><span class="glyphicon glyphicon-ok"></span><% end %></td>
              	<td style="vertical-align:middle"><% if user.support == true %><span class="glyphicon glyphicon-ok"></span><% end %></td>
      		    </tr>
        		<% end %>
          </tbody>
          
        </table>
        
      </div>

    </div>
		<div class="panel-footer"><p align="center"><em>Only managers & support can see this page.</em></p></div>        

  </div>
<% end %>